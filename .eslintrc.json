{
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": "2017"
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}